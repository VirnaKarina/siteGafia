-- EXEMPLO DE SELEÇÃO MOSTRANDO TODAS AS INFORMAÇÕES DO USUÁRIO DE ID 42 

SELECT id_usuario, nome, sobrenome, email, senha, is_admin, cidade, cep, dt_nasc, telefone
FROM public.usuarios
WHERE id_usuario=42;


-- EXEMPLO DE SELEÇÃO MOSTRANDO TODAS AS INFORMAÇÕES DO CARRO DE ID 16 (DA TABELA CARRO)

SELECT id_carro, ano_carro, dur_bat, id_marca, id_modelo, passageiros, id_usuario
FROM public.carro
WHERE id_carro=16;


-- SELECIONANDO TODOS OS DADOS DO HISTÓRICO DE CÓDIGO 1

SELECT id_historico, cidade_origem, cidade_destino, dt_consulta, tempo_viagem, qnt_abastecimento, km_viagem, id_carro, id_usuario
FROM public.historico_viagem
WHERE id_historico=1;


-- EXEMPLO DE SELEÇÃO JUTANDO AS TABEBELAS CARRO, MARCA E MODELO, MOSTRANDO O ID DO CARRO, A DURAÇÃO DA BATERIA, QUANTIDADE DE PASSAGEIROS, NOME DA MARCA E NOME DO MODELO


SELECT 
    c.id_carro,
    c.dur_bat,
    c.passageiros,
    m.nm_marca,
    mo.nm_modelo
FROM public.carro c
JOIN public.marca  m  ON m.id_marca = c.id_marca
JOIN public.modelo mo ON mo.id_modelo = c.id_modelo
WHERE c.id_carro = 16;


--SELECIONANDO O MODELO DE ID 1 E NOME DO MODELO

SELECT id_modelo, nm_modelo
FROM public.modelo
WHERE id_modelo=1;


-- EXEMPLO DE SELEÇÃO MOSTRANDO O ID DA MARCA E NOME DA MARCA

SELECT id_marca, nm_marca
FROM public.marca
WHERE id_marca=1;

